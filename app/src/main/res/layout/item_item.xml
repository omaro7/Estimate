<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_border_gray"
    android:foreground="?attr/selectableItemBackground"
    android:backgroundTint="@color/white"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    android:clickable="true">
    <LinearLayout
        android:id="@+id/llt_item"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 제목 -->
        <LinearLayout
            android:id="@+id/llt_field_basic_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_title_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="상품명"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="2222"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- 규격 & 단위 -->
        <LinearLayout
            android:id="@+id/llt_field_basic_mem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_mem_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="규격"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_item_std"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="2222"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_tab_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:text="단위"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_item_unit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="kg"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_regdate_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:text="판매가"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_item_unit_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="2222"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>

        <!-- 비고 -->
        <LinearLayout
            android:id="@+id/llt_field_basic_local"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="비고"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_item_remark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="2222"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
