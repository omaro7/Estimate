<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_border_gray"
    android:foreground="?attr/selectableItemBackground"
    android:backgroundTint="@color/white"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    android:clickable="true">
    <LinearLayout
        android:id="@+id/llt_est"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_est_date"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_margin="2dp"
                android:gravity="left|center_vertical"
                android:text="2023년12월25일"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/spoqahansansneomedium"
                android:textSize="16dp" />
        </LinearLayout>

        <!-- 업체명, 금액 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="left|center_vertical">

                <TextView
                    android:id="@+id/tv_field_mem_s"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_margin="2dp"
                    android:gravity="left|center_vertical"
                    android:text="업체명"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_est_cli_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="홍길동"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_est_money_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:text="금액"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_est_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="100,000,000"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
