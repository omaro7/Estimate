<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_border_gray"
    android:foreground="?attr/selectableItemBackground"
    android:backgroundTint="@color/white"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    android:clickable="true">
    <LinearLayout
        android:id="@+id/llt_cli"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 제목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="업체명"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_cli_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="2222"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- 대표자명, 사업자번호 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_mem_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="대표자명"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_cli_ceo_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="홍길동"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_tab_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:text="사업자번호"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_cli_biz_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="1112233333"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- 담당자명, 연락처 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="담당자명"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_cli_manager_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="홍길동"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="left|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:text="연락처"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_cli_hp_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="1112233333"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>

        <!-- 비고 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="비고"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_cli_remark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="2222"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
