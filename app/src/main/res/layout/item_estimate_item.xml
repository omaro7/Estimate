<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_border_gray"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">
    <LinearLayout
        android:id="@+id/llt_item"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 제목 -->
        <LinearLayout
            android:id="@+id/llt_field_basic_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_title_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="상품명"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="2222"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- 규격 & 단위 & 판매가 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="left|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="상품"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_item_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="5"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1">
                <TextView
                    android:id="@+id/tv_item_unit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:paddingRight="6dp"
                    android:text="kg"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:gravity="left|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:text="X"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_item_unit_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="10000"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:gravity="left|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:text="="
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="50000"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llt_item_tax_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:visibility="gone"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_item_tax_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="50000"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- 총합계 -->
        <LinearLayout
            android:id="@+id/llt_item_total"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="left|center_vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="left|center_vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1">
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:gravity="left|center_vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:gravity="left|center_vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:gravity="left|center_vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_item_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="50000"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>

        <!-- 비고 -->
        <LinearLayout
            android:id="@+id/llt_remark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="비고"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_item_remark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="2222"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
