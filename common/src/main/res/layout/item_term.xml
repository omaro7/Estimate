<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlt_term"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="6dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_agree_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="6dp"
            android:paddingEnd="20dp"
            android:src="@drawable/btn_more" />

        <CheckedTextView
            android:id="@+id/tv_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/spoqahansansneoregular"
            android:textSize="13dp"
            android:textColor="#111111"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="5sp"
            android:drawablePadding="8dp"
            android:layout_toStartOf="@id/iv_agree_arrow"
            android:drawableStart="@drawable/ask_checkbox_selector"
            android:gravity="center_vertical"
            android:text="(필수) 개인(신용)정보 제3자 제공 동의"
            />

</RelativeLayout>