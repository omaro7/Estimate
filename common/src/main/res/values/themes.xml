<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CommonModule" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogAnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_open</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_close</item>
    </style>

    <style name="Goms.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.CommonModule.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.Widget.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Widget.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="GomsTextVeiwStyle">
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/spoqahansansneoregular</item>
    </style>

    <style name="GomsTextVeiwStyleBold">
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/spoqahansansneoregular</item>
    </style>

    <!-- EditText -->
    <style name="GomsEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/ui_shape_edittext_cursor_color</item> <!--커서이미지-->
        <item name="android:textSelectHandle">@drawable/ui_shape_edittext_cursor_color</item>   <!--커서 물방물이미지-->
        <item name="android:height">40dp</item>
    </style>

    <!-- Base Button -->
    <style name="button_default">
        <item name="android:background">@drawable/bg_round_default_btn</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/spoqahansansneoregular</item>
    </style>
    <style name="button_default_disable">
        <item name="android:background">@drawable/bg_round_default_btn_disable</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/spoqahansansneoregular</item>
    </style>

    <style name="button_cancel">
        <item name="android:background">@drawable/bg_round_cancel_btn</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/spoqahansansneoregular</item>
    </style>

    <style name="btn_bottom_popup_left">
        <item name="android:textSize">20dp</item>
        <item name="android:background">@color/gray_78</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="btn_bottom_popup_right">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/bottom_popup_right</item>
    </style>

