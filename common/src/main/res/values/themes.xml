    <style name="TextInputLayoutEditTextNormalStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:colorControlNormal">@color/text_primary</item>  <!--//unFocus 상태일때 밑줄 색.-->
        <item name="boxStrokeColor">@color/text_primary</item>              <!--//Focus 상태일때 밑줄 색.-->
        <item name="android:textCursorDrawable">@color/text_primary</item>  <!--//cursor 색.-->

        <item name="android:textColorHint">@color/text_primary_gray</item>  <!--//placeholder 색.-->
        <item name="hintTextColor">@color/text_primary</item>               <!--//floating placeholder 색.-->

        <item name="helperText">@color/text_primary</item>                  <!--//helper 색.-->
        <item name="helperTextTextColor">@color/red</item>                  <!--//helper 색.-->
        <!--        <item name="errorTextColor">@color/red</item>                       &lt;!&ndash;//helper error 색.&ndash;&gt;-->

        <item name="passwordToggleEnabled">false</item>                      <!--//꼭 해야지만 endIcon이 보입니다. true, false 상관없음. -->
        <item name="endIconMode">clear_text</item>                          <!-- 입력창 끝에 x 아이콘 생성 -->
        <item name="endIconDrawable">@drawable/btn_pop_close</item>         <!-- 입력창 끝에 x 아이콘 생성 -->
    </style>

    <style name="TextInputLayoutEditTextNoDeleteBtnStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:colorControlNormal">@color/text_primary</item>  <!--//unFocus 상태일때 밑줄 색.-->
        <item name="boxStrokeColor">@color/text_primary</item>              <!--//Focus 상태일때 밑줄 색.-->
        <item name="android:textCursorDrawable">@color/text_primary</item>  <!--//cursor 색.-->

        <item name="android:textColorHint">@color/text_primary_gray</item>  <!--//placeholder 색.-->
        <item name="hintTextColor">@color/text_primary</item>               <!--//floating placeholder 색.-->

        <item name="helperText">@color/text_primary</item>                  <!--//helper 색.-->
        <item name="helperTextTextColor">@color/red</item>                  <!--//helper 색.-->
        <!--        <item name="errorTextColor">@color/red</item>                       &lt;!&ndash;//helper error 색.&ndash;&gt;-->

        <item name="passwordToggleEnabled">false</item>                      <!--//꼭 해야지만 endIcon이 보입니다. true, false 상관없음. -->
    </style>
    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>
